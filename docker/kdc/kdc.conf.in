[logging]
kdc = FILE:/var/log/heimdal-kdc.log

[kdc]
database = {
	dbname = /app/db/@REALM@/heimdal
	acl_file = /app/db/@REALM@/kadmind.acl
	mkey_file = /app/db/@REALM@/heimdal.mkey
}

require-preauth = TRUE
enable-http = TRUE

[kadmin]
require-preauth = TRUE
